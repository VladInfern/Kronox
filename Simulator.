local Window = OrionLib:MakeWindow({Name = "Kronox Hub || üí™üèª Lifting Simulator", IntroText = "Kronox Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "Kronox"})
local vu = game:GetService("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:connect(function()
vu:Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
    wait(1)
vu:Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
end)

--Value--
_G.autoFarm = true
_G.autoSell = true

--Function--
function autoFarm()
    while _G.autoFarm == true do
        game:GetService("ReplicatedStorage").RemoteEvent:FireServer({"GainMuscle"})
        wait(.0000000000000001)
    end
end

function autoSell()
    while _G.autoSell == true do
        game:GetService("ReplicatedStorage").RemoteEvent:FireServer({"SellMuscle"})
        wait(2.0)
    end
end

--Tabs--
local FarmTab = Window:MakeTab({
